@model Poe_Part_2.Models.Product

@{
    ViewData["Title"] = "UserDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header text-center">
                    <h2>@ViewBag.User's Product Details</h2>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">
                            <partial>Product Name</partial>
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.ProductName)
                        </dd>
                        <dt class="col-sm-4">
                            <partial>Production Date</partial>
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.ProductionDate)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Info)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Info)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Category)
                        </dt>
                        <dd class="col-sm-10">
                            <partial>@ViewBag.CategoryName</partial>
                        </dd>
                        <dt class="col-sm-4">
                            <partial>Username</partial>
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Username)
                        </dd>
                    </dl>
                    <div>
                        <a asp-action="UserProducts" asp-route-id="@Model?.Username">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
